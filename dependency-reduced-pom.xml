<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.tobiyas</groupId>
  <artifactId>EnderdragonsPlus</artifactId>
  <name>EnderdragonsPlus</name>
  <version>1.9.1-RC</version>
  <description>EnderdragonsPlus is a Plugin of CraftBukkit to support EnderDragon handling more easily</description>
  <url>http://dev.bukkit.org/server-mods/enderdragonsplus/</url>
  <scm>
    <connection>scm:git:git://github.com/tobiyas/Enderdragonsplus.git</connection>
    <developerConnection>scm:git:git@github.com:tobiyas/Enderdragonsplus.git</developerConnection>
    <tag>master</tag>
    <url>https://github.com/tobiyas/Enderdragonsplus</url>
  </scm>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <testSourceDirectory>test/main/java</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
        </includes>
        <excludes>
          <exclude>*.jar</exclude>
          <exclude>*.project</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>de.tobiyas:Utils</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.2.2</version>
        <configuration>
          <preparationGoals>assembly:assembly</preparationGoals>
          <goals>assembly:assembly</goals>
          <tagNameFormat>@{project.version}</tagNameFormat>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>com.sk89q</id>
      <name>sk89qRepo</name>
      <url>http://maven.sk89q.com/repo/</url>
    </repository>
    <repository>
      <id>org.bukkit</id>
      <url>http://repo.bukkit.org/content/groups/public</url>
    </repository>
    <repository>
      <id>org.spout</id>
      <url>http://repo.spout.org/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>com.sk89q</groupId>
      <artifactId>worldedit</artifactId>
      <version>5.4.6-SNAPSHOT</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>craftbukkit</artifactId>
      <version>1.5.2-R0.2-SNAPSHOT</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.5.2-R0.2-SNAPSHOT</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>de.v10lator</groupId>
      <artifactId>RideThaDragon</artifactId>
      <version>0.9.2</version>
      <scope>system</scope>
      <systemPath>D:/Dropbox/Workspace/Workspace-Minecraft/Libaries/Misc/RideThaDragon.jar</systemPath>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>com.xemsdoom</groupId>
      <artifactId>DragonTravel</artifactId>
      <version>1.6</version>
      <scope>system</scope>
      <systemPath>D:/Dropbox/Workspace/Workspace-Minecraft/Libaries/Misc/DragonTravel.jar</systemPath>
      <optional>true</optional>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

